@using VacationManagement.ViewModels
@model LoginUserVM

<div class="row">
    <div class="col-md-4">
        <form action="/Account/Login/@Model" method="post">
            <div asp-validation-summary="All" class="text-danger" style="color:brown"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" style="color:brown;display:inline-block"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" style="color:brown;display:inline-block"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IsPersisted" class="form-check-label"></label>
                <input asp-for="IsPersisted" class="form-check-input" />
                <span asp-validation-for="IsPersisted" style="color:brown;display:inline-block"></span>
            </div>
    
            <input type="submit" value="Login" class="btn btn-primary" />
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}